{
  "name": "the-syncer",
  "version": "0.1.3",
  "description": "Desktop application to send out jobs for further processing.",
  "author": "Max Albrecht",
  "build": {
    "appId": "com.albrechtsoft.thesyncer",
    "directories": {
      "buildResources": "."
    },
    "productName": "The Syncer",
    "win": {
      "icon": "build/icon.ico",
      "certificateFile": "private/albrechtsoft.pfx",
      "verifyUpdateCodeSignature": false,
      "publisherName": "albrechtsoft",
      "publish": [
        "github"
      ]
    }
  },
  "main": "public/electron.js",
  "homepage": "./",
  "private": true,
  "dependencies": {
    "axios": "^0.19.1",
    "bootstrap": "^4.4.1",
    "cross-env": "^6.0.3",
    "electron-is-dev": "^1.1.0",
    "electron-log": "^4.0.2",
    "electron-updater": "^4.2.0",
    "email-prop-type": "^3.0.0",
    "file-sizeof": "^1.0.4",
    "jquery": "^3.4.1",
    "prop-types": "^15.7.2",
    "react": "^16.11.0",
    "react-beautiful-dnd": "^12.2.0",
    "react-bootstrap": "^1.0.0-beta.16",
    "react-dom": "^16.11.0",
    "react-router-dom": "^5.1.2",
    "react-scripts": "^3.3.0",
    "storybook": "^5.3.3",
    "stringify": "^5.2.0",
    "styled-components": "^4.4.1",
    "yarn": "^1.21.1"
  },
  "scripts": {
    "start-react": "react-scripts start",
    "build-react": "react-scripts build",
    "test-react": "react-scripts test --env=jsdom",
    "eject-react": "react-scripts eject",
    "build-electron": "electron-builder",
    "build": "yarn build-react && yarn build-electron",
    "start": "concurrently \"cross-env BROWSER=none yarn start-react\" \"wait-on http://localhost:3000 && electron .\"",
    "make-cert": "electron-builder create-self-signed-cert -p albrechtsoft",
    "storybook": "start-storybook -p 9009 -s public",
    "build-storybook": "build-storybook -s public"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@storybook/addon-actions": "^5.3.3",
    "@storybook/addon-links": "^5.3.3",
    "@storybook/addons": "^5.3.3",
    "@storybook/preset-create-react-app": "^1.5.1",
    "@storybook/react": "^5.3.3",
    "concurrently": "^5.0.0",
    "electron": "^7.1.7",
    "electron-builder": "^22.1.0",
    "html-loader": "^0.5.5",
    "react-redux": "^7.1.3",
    "redux": "^4.0.5",
    "redux-saga": "^1.1.3",
    "redux-thunk": "^2.3.0",
    "wait-on": "^3.3.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/maxalbrecht100/aws-sam-s3-bucket-trigger-api"
  }
}
